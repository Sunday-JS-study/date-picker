{
  /* CUSTOMIZED */
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "classes": true,
      "jsx": true
    }
  },
  /* CUSTOMIZED */
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true,
    "jest": true,

    //CUSTOMIZED
    "es6": true,
    "commonjs": true
  },
  "plugins": [
    "babel",
    "import"
  ],
  "extends": [
    "standard",
    "plugin:import/errors"
  ],
  "rules": {
    "semi": ["error", "always"],
    "jsx-quotes": ["error", "prefer-double"],
    "object-curly-spacing": ["error", "always"]
  }
}
